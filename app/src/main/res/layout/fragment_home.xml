<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/bg_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/screen_padding_horizontal"
        android:paddingEnd="@dimen/screen_padding_horizontal"
        android:paddingTop="@dimen/screen_padding_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:contentDescription="Profile"
            android:src="@android:drawable/ic_menu_myplaces"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circular" />

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textColor="@color/purple_primary"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            android:layout_marginStart="@dimen/spacing_md" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_username_placeholder"
            android:textColor="@color/purple_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/greeting_text"
            app:layout_constraintTop_toBottomOf="@id/greeting_text"
            android:layout_marginTop="4dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_card_height"
            android:background="@drawable/bg_progress_card"
            android:layout_marginTop="@dimen/spacing_xl"
            android:padding="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_icon_box"
                android:padding="6dp"
                android:src="@drawable/ic_more_horiz"
                android:contentDescription="More"
                android:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR PROGRESS"
                android:textColor="@color/purple_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_md" />

            <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="@dimen/progress_ring_container_size"
                android:layout_height="@dimen/progress_ring_container_size"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/progress_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_lg">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    app:indicatorSize="@dimen/progress_ring_size"
                    app:trackThickness="@dimen/progress_ring_thickness"
                    app:trackCornerRadius="@dimen/progress_ring_corner_radius"
                    app:indicatorColor="@color/purple_primary"
                    app:trackColor="@color/purple_light" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/100"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_achievements_button"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:minHeight="52dp"
                android:background="@drawable/bg_pill_button"
                android:text="View Achievements"
                android:textAllCaps="false"
                android:textColor="@color/purple_primary"
                android:textSize="16sp"
                android:includeFontPadding="true"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:layout_constraintTop_toBottomOf="@id/progress_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/recently_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recently Obtained"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing_xl"
            app:layout_constraintTop_toBottomOf="@id/progress_card"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recently_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/recently_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/spacing_md" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/view_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
